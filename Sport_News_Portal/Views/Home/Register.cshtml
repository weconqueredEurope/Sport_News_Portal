</div>
<div id="register__container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <label for="r5" id="em">Email</label>&nbsp;:
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "r4", @name = "email" } })
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="r4" id="pwd">Password :</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "r4", @name = "pass", Type = "password" } })
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <label for="r5" id="em">Họ : </label>
                @Html.EditorFor(model => model.Ho, new { htmlAttributes = new { @class = "form-control", @id = "r1", @name = "fname" } })
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <label for="r5" id="em">Tên :</label>
                @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control", @id = "r1", @name = "fname" } })
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                    <button type="submit" id="register">Đăng ký</button>
                </div>
            </div>
        </div>
    }
</div>

